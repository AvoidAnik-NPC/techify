@model Techify.Models.ProductDetails

@{
    ViewBag.Title = "ProductAdd";
    Layout = "~/Views/Seller/Seller_Dashboard_Layout.cshtml";
}

@using (Html.BeginForm("ProductAdd", "Seller", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="card" style="padding: 20px; background-color: #000000; color: #ffffff; box-shadow: 0 0 10px rgba(0, 0, 0, 0.5); border: 1px solid #444;">
        <div class="card-header" style="background-color: #1c1c1c; border-bottom: 1px solid #444;">
            <h3 style="margin: 0;">Add Product</h3>
        </div>
        <div class="card-body">
            <div class="form-horizontal">
                <hr style="border-color: #555;" />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="Name" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.Name)</label>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", style = "background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="Description" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.Description)</label>
                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4, style = "background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" })
                    @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="Price" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.Price)</label>
                    @Html.EditorFor(model => model.Price, new { htmlAttributes = new { @class = "form-control", style = "background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" } })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="StockQuantity" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.StockQuantity)</label>
                    @Html.EditorFor(model => model.StockQuantity, new { htmlAttributes = new { @class = "form-control", style = "background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" } })
                    @Html.ValidationMessageFor(model => model.StockQuantity, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="CategoryID" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.CategoryID)</label>
                    @Html.DropDownListFor(model => model.CategoryID, Model.Categories, "---Select---", new { @class = "form-control", style = "background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" })
                    @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="BrandID" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.BrandID)</label>
                    @Html.DropDownListFor(model => model.BrandID, Model.Brands, "- Select Brand -", new { @class = "form-control", style = "background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" })
                    @Html.ValidationMessageFor(model => model.BrandID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="SellerID" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.SellerID)</label>
                    @Html.EditorFor(model => model.SellerID, new { htmlAttributes = new { @class = "form-control", style = "background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" } })
                    @Html.ValidationMessageFor(model => model.SellerID, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="margin-bottom: 20px;">
                    <label for="ImageURL" class="control-label" style="color: #ffffff; margin-bottom: 5px; display: block;">@Html.DisplayNameFor(model => model.ImageURL)</label>
                    <input type="file" id="productImage" name="productImage" class="form-control" style="background-color: #222; color: #ffffff; border: 1px solid #555; width: 100%; padding: 10px;" />
                    @Html.ValidationMessageFor(model => model.ImageURL, "", new { @class = "text-danger" })
                </div>

                <div class="form-group" style="text-align: left;">
                    <input type="submit" value="Save" class="btn btn-primary" style="background-color: #007bff; border-color: #007bff; color: #ffffff; margin-right: 10px;" />
                    @Html.ActionLink("Cancel", "Seller_Dashboard", null, new { @class = "btn btn-default", style = "background-color: #6c757d; border-color: #6c757d; color: #ffffff;" })
                </div>

            </div>
        </div>
    </div>
}
