@model Techify.Models.Home.ShopViewModel
@using PagedList;
@using PagedList.Mvc;
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/FilterLayout.cshtml";
}

<h2>Shop</h2>
<div class="container">
    <div class="row">
        @foreach (var item in Model.ListOfProducts)
        {
            <div class="col-md-3 col-xs-6 product-item-container">
                <div class="thumbnail product-item" style="height: 560px; width: 280px; border-radius: 15px; background: #ffffff; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2); transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out; overflow: hidden;">
                    <a href="@Url.Action("ProductDetails", "Home", new { id = item.ProductID })">
                        <img class="img-responsive product-image" title="Click to View Product detail" src="@item.ImageURL" style="height: 270px; width: 100%; object-fit: cover; border-bottom: 2px solid #f1f1f1; transition: transform 0.3s ease-in-out;" />
                    </a>
                    <div class="caption product-caption">
                        <div class="product-info">
                            <h5 class="product-name">@item.Name</h5>
                            <p class="product-price">@item.Price /-</p>
                        </div>
                        <div class="product-action">
                            @if (item.StockQuantity > 0)
                            {
                                using (Html.BeginForm("AddToCart", "Home", new { productId = item.ProductID }, FormMethod.Post))
                                {
                                    <button type="submit" class="btn add-to-cart-btn">
                                        <i class="fa fa-shopping-cart"></i> Add to Cart
                                    </button>
                                }
                                <p class="product-availability text-success">Available</p>
                            }
                            else
                            {
                                <p class="product-availability text-danger">Not Available</p>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="row text-center pagination-container">
        @Html.PagedListPager(Model.ListOfProducts, page => Url.Action("Shop", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded, DisplayItemSliceAndTotal = true })
    </div>
</div>

<style>
    .caption.product-caption {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 200px;
        padding: 15px;
        background: #f9f9f9;
        text-align: center;
    }

    .product-info {
        margin-bottom: 10px;
        flex-grow: 1;
    }

    .product-name {
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        font-size: 1.2em;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-price {
        color: #ff5722;
        font-size: 1.5em;
        font-weight: 700;
    }

    .product-action {
        margin-top: 10px;
    }

    .product-item-container:hover {
        transform: scale(1.05);
    }

    .product-item:hover {
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.3);
        transform: translateY(-7px);
    }

        .product-item:hover .product-image {
            transform: scale(1.07);
        }

    .add-to-cart-btn:hover {
        background: linear-gradient(135deg, #C70039, #ff5722);
        transform: translateY(-3px);
        box-shadow: 0 6px 14px rgba(0, 0, 0, 0.3);
    }

    .pagination-container a,
    .pagination-container span {
        margin: 0 7px;
        padding: 12px 18px;
        color: #007bff;
        text-decoration: none;
        border-radius: 8px;
        transition: background-color 0.3s ease-in-out, color 0.3s ease-in-out;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

        .pagination-container a:hover,
        .pagination-container span.current {
            background-color: #007bff;
            color: white;
        }

    .product-item {
        height: 560px;
        width: 270px;
        border-radius: 15px;
        background: #ffffff;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
        transition: box-shadow 0.3s ease-in-out, transform 0.3s ease-in-out;
        overflow: hidden;
    }

    .product-image {
        height: 200px;
        width: 100%;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
    }

    .product-caption {
        padding: 20px;
        text-align: center;
        background: #f9f9f9;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 200px;
    }

    .product-name {
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        font-size: 1.2em;
        line-height: 1.4;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-price {
        color: #ff5722;
        font-size: 1.5em;
        margin-bottom: 10px;
        font-weight: 700;
    }

    .add-to-cart-btn {
        background: linear-gradient(135deg, #C70039, #900C3F);
        border: none;
        color: white;
        padding: 12px 20px;
        border-radius: 8px;
        font-size: 1em;
        transition: background 0.3s ease-in-out, transform 0.3s ease-in-out;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        display: block;
        width: 100%;
        margin-top: 10px;
    }

    .product-availability {
        margin-top: 10px;
        font-weight: 600;
    }

    .text-success {
        color: #28a745;
    }

    .text-danger {
        color: #dc3545;
    }

    .pagination-container {
        text-align: center;
        margin-top: 25px;
    }

    .product-item-container {
        margin-bottom: 8px;
        height: 560px;
        display: flex;
        flex-direction: column;
    }

    .thumbnail.product-item {
        height: 100%;
    }
</style>
