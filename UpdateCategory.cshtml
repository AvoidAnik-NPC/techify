@model Techify.Models.CategoryDetails

@{
    ViewBag.Title = "Update Category";
    Layout = "~/Views/Admin/Admin_Dashboard.cshtml";
}

<style>
    body {
        font-family: Arial, sans-serif;
    }

    .card {
        border: none;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25); /* Darker and wider shadow */
    }

    .card-header {
        background-color: #007bff; /* Blue color */
        color: white;
        font-size: 1.5rem;
        font-weight: bold;
    }

    .form-label {
        color: #007bff; /* Blue color for labels */
        font-size: 1.1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        font-size: 1.1rem;
        padding: 0.5rem 1.5rem;
    }

    .btn-outline-danger {
        border-color: #dc3545;
        color: #dc3545;
        font-size: 1.1rem;
        padding: 0.5rem 1.5rem;
    }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: #fff;
        }

    .form-control {
        border-radius: 0.25rem;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .card-footer {
        border-top: 1px solid #dee2e6;
        background-color: white;
    }

    .icon {
        margin-right: 0.5rem;
    }

    .btn-icon {
        display: flex;
        align-items: center;
    }
</style>

<div class="container-fluid">
    <div class="card shadow-sm mt-4">
        <div class="card-header">
            <i class="icon fas fa-plus-circle"></i> Add New Category
        </div>
        <div class="card-body p-5">
            @using (Html.BeginForm("SaveCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.HiddenFor(m => m.CategoryID)
                <div class="form-group mb-4">
                    <label class="form-label font-weight-bold">Category Name</label>
                    @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control form-control-lg", placeholder = "Enter category name", required = "required", autofocus = "autofocus" })
                    @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger mt-1" })
                </div>
                <div class="form-group mb-4">
                    <label class="form-label font-weight-bold">Description</label>
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control form-control-lg", placeholder = "Enter category description", required = "required" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger mt-1" })
                </div>
                <div class="card-footer d-flex justify-content-end">
                    <a onclick="window.history.back()" class="btn btn-outline-danger btn-icon me-2">
                        <i class="icon fas fa-times-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary btn-icon">
                        <i class="icon fas fa-save"></i> Save
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
