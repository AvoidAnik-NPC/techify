@model Techify.Models.Customer

@{
    ViewBag.Title = "Customer Signup";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            background-image: url('/images/login_bg.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .card {
            background-color: #333;
            color: #fff;
            padding: 40px 20px 20px 20px;
            border-radius: 8px;
            width: 400px;
            height: 415px;
            position: relative;
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }

        .form-group {
            margin-bottom: 15px;
            display: flex;
            align-items: center;
        }

            .form-group label {
                width: 30%;
                margin-right: 10px;
            }

            .form-group input {
                width: 70%;
            }

        .form-control {
            background-color: #555;
            color: #fff;
            border: none;
            border-radius: 5px;
            padding: 10px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 5px;
            border: none;
        }

        .btn-default {
            background-color: red;
            color: white;
            display: block;
            margin: 0 auto;
            width: 50%;
            border-radius: 40px 40px 40px 40px;
        }

        .btn-outline-primary {
            border: 2px solid #007bff;
            color: #007bff;
            background-color: transparent;
        }

        .btn-outline-danger {
            border: 2px solid #dc3545;
            color: #dc3545;
            background-color: transparent;
        }

        .circle-image {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            background-color: #fff;
            position: absolute;
            top: -50px;
            left: calc(50% - 50px);
            background-size: cover;
            background-position: center;
        }

        .btn-login, .btn-back {
            background-color: transparent;
            color: inherit;
            border: 1px solid;
            text-decoration: none;
            padding: 10px 20px;
            border-radius: 5px;
            position: absolute;
        }

        .btn-login {
            color: red;
            border-color: red;
            bottom: 1rem;
            right: 1rem;
        }

        .btn-back {
            color: blue;
            border-color: blue;
            bottom: 1rem;
            left: 1rem;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="circle-image" style="background-image: url('/images/icon.jpg');"></div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Customer</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", placeholder = "Name" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Email)
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", placeholder = "Password" } })
                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Address)
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Address" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.PhoneNumber)
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", placeholder = "Phone Number" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            


                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        }

        <a href="@Url.Action("Customer_Login", "Account")" class="btn-login">Sign In</a>
        <a href="@Url.Action("Index", "Home")" class="btn-back">Back</a>
    </div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</body>
</html>
