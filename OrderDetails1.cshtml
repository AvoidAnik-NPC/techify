@model IEnumerable<Techify.Models.OrderDetail>

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Seller/Seller_Dashboard_Layout.cshtml";
}

<div class="card" style="background: linear-gradient(145deg, #1a1a1a, #333333); color: #ffffff; padding: 20px; border-radius: 12px; box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);">
    <div class="card-body">
        <label class="card-title" style="display: block; width: 100%; margin-bottom: 20px; text-align: center; font-size: 28px; color: #ffffff; background-color: #36454F; padding: 15px 0; border-radius: 8px; box-shadow: inset 0 0 10px rgba(0, 0, 0, 0.5);">
            <i class="fa fa-shopping-cart" style="vertical-align: middle;"></i> Order Details
        </label>

        <div class="table-responsive" style="margin-top: 20px;">
            <table class="table table-hover" style="background-color: #212529; color: #ffffff; border-collapse: collapse; border-radius: 8px; overflow: hidden;">
                <thead>
                    <tr style="background-color: #343a40;">
                        <th style="padding: 12px 10px; border-bottom: 2px solid #ffffff;">Product Name</th>
                        <th style="padding: 12px 10px; border-bottom: 2px solid #ffffff;">Quantity</th>
                        <th style="padding: 12px 10px; border-bottom: 2px solid #ffffff;">Unit Price</th>
                        @*<th style="padding: 12px 10px; border-bottom: 2px solid #ffffff;">Discount</th>*@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var detail in Model)
                    {
                        <tr style="border-top: 1px solid #343a40;">
                            <td style="padding: 10px 8px;">@detail.Product.Name</td>
                            <td style="padding: 10px 8px;">@detail.Quantity</td>
                            <td style="padding: 10px 8px;">@detail.UnitPrice</td>
                            @*<td style="padding: 10px 8px;">@detail.Discount</td>*@
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a href="@Url.Action("Orders", "Seller")" class="btn btn-secondary btn-action" style="background: linear-gradient(145deg, #6c757d, #5a6268); border: none; color: #ffffff; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); margin-top: 20px;">
            <i class="fa fa-arrow-left" style="vertical-align: middle;"></i> Back to Orders
        </a>
    </div>

    <style>
        .btn-action {
            width: 150px; /* Adjust as needed */
            text-align: center;
            padding: 10px 15px;
            border-radius: 8px;
            border: none;
            font-size: 16px;
        }

        table thead th {
            padding: 12px 10px;
            font-weight: bold;
        }

        table tbody td {
            padding: 10px 8px;
            border-top: 1px solid #343a40;
        }

        table tbody tr:hover {
            background-color: #2a2a2a;
        }
    </style>
</div>
